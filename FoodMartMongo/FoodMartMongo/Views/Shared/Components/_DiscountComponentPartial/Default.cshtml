@model List<FoodMartMongo.Dtos.DiscountDtos.ResultDiscountDto>

<section id="discount" class="py-5">
    <div class="container-fluid">
        @foreach (var group in Model.Chunk(2))
        {
            <div class="row g-4 mb-3">
                @foreach (var item in group)
                {
                    <div class="col-md-6">
                        <div class="d-flex align-items-center rounded-4 shadow-sm p-4" style="background-color: #fef1ee;">
                            <div class="col-6">
                                <div class="text-warning fw-bold mb-1 fs-5">@item.SubTitle</div>
                                <h4 class="fw-semibold">@item.Title</h4>
                                <p class="text-muted">@item.Description</p>
                                <a href="#" class="btn btn-dark btn-sm mt-2 text-uppercase">SHOW NOW</a>
                            </div>
                            <div class="col-6 text-end">
                                <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid" style="max-height: 150px;" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>
